- var title = "Mi Vida"
html
	head
		block head
			link(rel="stylesheet" href="/css/main.css")
			link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Mr+Dafoe" rel="stylesheet")
			title #{title}
			script(src="/js/jq.min.js")
			script(src="/js/mividafuncs.js")
	body
		header
			h1 #{title}
			nav
				- var tabs = [{name: "home", link: "/"}, {name: "login", link: "/login"}];
				- if(user){
					- tabs.push({name: "submit article", link: "/articles/submit"})
					- tabs.push({name: "welcome, " + user.first, link: "/account", more: [{name: "Logout", link: "/logouts"}]})
				- }
				ul
					- for(let i = 0; i < tabs.length; i++)
						div
							a(href=tabs[i].link)
								li #{tabs[i].name}
									//- - if(tabs[i].more)
									//- 	ul.dropdown
									//- 		- for(let j = 0; j < tabs[i].more.length; j++)
									//- 			a(href=tabs[i].more[j].link)
									//- 				li #{tabs[i].more[j].name}
		#content
			block content
		footer
			#info.moveleft5
